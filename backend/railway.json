{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "nixpacks"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npm run build && node dist/index.js",
    "restartPolicyMaxRetries": 5,
    "healthchecks": {
      "enabled": true,
      "cpu": 50,
      "memory": 50
    }
  }
}
